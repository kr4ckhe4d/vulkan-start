{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Vulkan App",
            "type": "shell",
            "command": "g++ -std=c++17 -O2 -DNDEBUG tutorial.cpp -o tutorial `pkg-config --cflags --libs vulkan glfw3`",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Vulkan App (Debug)",
            "type": "shell",
            "command": "g++ -std=c++17 -g tutorial.cpp -o tutorial_debug `pkg-config --cflags --libs vulkan glfw3`",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}